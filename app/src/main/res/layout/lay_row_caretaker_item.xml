<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_caretaker_name"
        style="@style/text_style_16_bold"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginVertical="5dp"
        android:padding="5dp"
        android:text="Title"
        app:layout_constraintEnd_toStartOf="@+id/iv_caretaker_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_caretaker_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/ic_options_dots"
        android:tint="@color/greyscale_900"
        app:layout_constraintBottom_toBottomOf="@+id/tv_caretaker_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_caretaker_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_balel_phone_numberr"
        style="@style/text_style_14_normal"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="@string/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_caretaker_name" />

    <TextView
        android:id="@+id/tv_phone_number"
        style="@style/text_style_14_normal"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="@string/phone_number"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/tv_balel_phone_numberr"
        app:layout_constraintTop_toBottomOf="@+id/tv_caretaker_name" />


    <TextView
        android:id="@+id/tv_label_address"
        style="@style/text_style_14_normal"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_balel_phone_numberr" />

    <TextView
        android:id="@+id/tv_address"
        style="@style/text_style_14_normal"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="@string/address"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_label_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_number" />

</androidx.constraintlayout.widget.ConstraintLayout>